{%- style -%}
	.tp-collection-list {
		padding: 80px 0;
		background-color: #f8f9fa;
	}
{%- endstyle -%}

<section class="tp-collection-list">
	<div class="container">
		<div class="row">
			{% for collection in collections %}
				{% if collection.products.size > 0 %}
					<div class="col-lg-3">
						<div class="card">
							{%- if collection.image -%}
								<img
									src="{{ collection.image.src | image_url: width: 300  }} "
									width="auto"
									height="auto"
									loading="lazy"
									alt="{{ collection.image.alt }}"
								>
							{%- else -%}
								{{ 'collection-1' | placeholder_svg_tag }}
							{%- endif -%}

							<div class="card-body">
								<h5 class="card-title">{{ collection.title }}</h5>
								<a href="{{ collection.url }}" class="btn btn-primary">see more</a>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
	</div>
</section>

{% schema %}
{
	"name": "Collection List",
	"class": "tp-collection-list",
	"settings": [],
	"presets": [
		{
			"name": "Collection List",
			"settings": {}
		}
	]
}
{% endschema %}
