{%- style -%}
	.main-product-area {
		padding: {{ section.settings.paddicg_top_bottom }}px 0;
	}
{%- endstyle -%}
{%- assign current_variant = product.selected_or_first_available_variant -%}
{%- assign feature_image = current_variant.featured_image | default: product.featured_image -%}

<section class="main-product-area">
	<div class="container">
		<div class="row">
			<div class="col-xl-6">
				<div class="main-product-thumb">
					{%- if feature_image != blank -%}
						<img
							src="{{ feature_image.src | image_url: width: 500 }}"
							width="auto"
							height="auto"
							loading="lazy"
							alt="{{ feature_image.alt | escape }}"
						>
					{%- else -%}
						{{ 'product-1' | placeholder_svg_tag }}
					{%- endif -%}
				</div>
			</div>
			<div class="col-xl-6">
				<div class="main-product-information">
					<h2 class="main-product-title">{{ product.title }}</h2>
					<p class="main-product-description">
						{{ product.description | truncatewords: 30, '...' }}
					</p>

					<div class="main-product-price" id="variant_price">
						<span class="price">{{ product.price | money }}</span>
						{%- if product.compare_at_price > product.price -%}
							<s class="compare-price">
								{{ product.compare_at_price | money }}
							</s>
						{%- endif -%}
					</div>

					<div class="product-form">
						{% form 'product', product %}
							{%- if product.has_only_default_variant -%}
								<input type="hidden" name="id" value="{{ current_variant.id }}">
							{%- else -%}
								<select name="id" id="variant_select">
									{%- for variant in product.variants -%}
										<option value="{{ variant.id }}">
											{{ variant.title }} - {{ variant.price | money }}
										</option>
									{%- endfor -%}
								</select>
							{%- endif -%}

							<input
								type="number"
								name="quantity"
								id="quantity"
								value="1"
								min="1"
								max="{{ current_variant.inventory_quantity }}"
							>
							<input
								type="submit"
								value="Add to cart"
								id="add-to-cart-btn"
								{%- if current_variant.available == false -%}
									disabled="disabled"
								{%- endif -%}
							>
							{{ form | payment_button }}
						{% endform %}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

{% schema %}
{
	"name": "Main Product Section",
	"class": "main-product-section",
	"settings": [
		{
			"type": "range",
			"id": "paddicg_top_bottom",
			"min": 50,
			"max": 150,
			"step": 5,
			"unit": "px",
			"label": "Padding Top & Bottom",
			"default": 80
		}
	],
	"presets": [
		{
			"name": "Main Product Section",
			"settings": {}
		}
	]
}
{% endschema %}
